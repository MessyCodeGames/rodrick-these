<section class="flex flex-col justify-between items-center">
  <div class="flex flex-col items-center px-8 text-center">
    <h1>GG EASY NOOB!</h1>
    <img src="https://www.shutterstock.com/image-vector/bravo-lettering-vector-text-banner-600nw-1598877403.jpg" alt="" class="">
    <p>Bravo, clique sur les tÃªtes pour lire les messages!</p>

    <% @friends.each_with_index do |friend, index| %>
      <div class="flex w-full ">
        <div data-controller="toggle" class="flex flex-col items-center gap-4 ">
          <div class="flex w-full <%= index % 2 == 0 ? 'justify-start' : 'justify-end' %>">
            <%= image_tag friend.avatar, alt: "", class: "justify-left w-24 mt-4 h-auto rounded-full cursor-pointer", data: { action: "click->toggle#fire" } %>
          </div>
          <div data-toggle-target="togglableElement" class="w-full smooth-toggle togglable-element text-center">
            <p class="flex <%= index % 2 == 0 ? 'justify-start' : 'justify-end' %>"><%= friend.name %>:</p>
            <p class="text-center"><%= friend.message %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>


<style>
.smooth-toggle {
  transition: opacity 0.5s ease, visibility 0.5s ease;
}

.togglable-element {
  overflow: hidden;
  transition: height 0.3s ease;
  height: 0;
}

.togglable-element.expanded {
  height: auto; /* This will be dynamically set by JavaScript */
}

