<section class="h-screen flex flex-col justify-center items-center bg-questions">

  <div data-controller="questions" class="flex flex-col justify-center items-center gap-8 px-8">
    <%= audio_tag "zelda_chime.mp3" %>
    <%= audio_tag "wrong_buzzer.mp3" %>
    <div class="">
      <p class="neon-text rotating-text" data-text="COUIZE">COUIZE</p>
    </div>
    <p class="text-white p-4 bg-black bg-opacity-80" data-questions-target="lives">Nombre de vies: 3</p>
    <ul class="text-white gap-8 flex flex-col justify-center items-center text-center">
      <% @questions.each_with_index do |question, index| %>
        <li data-questions-target="question" class="<%= 'hidden' if index > 0 %> p-4 bg-black bg-opacity-80">
          <p class="mb-8 p-4 bg-black">Question NÂ°<%= question.number %>/<%= @questions.all.length %></p>
          <h4><%= question.question %></h4>
          <ul>
            <% question.answers.each do |answer| %>
              <li class="py-4">
                <label>
                  <input data-questions-target="radioChoice" type="radio" name="question<%= question.number %>" value="<%= answer %>"/><%= answer %>
                </label>
              </li>
            <% end %>
          </ul>
          <button data-action="click->questions#checkAnswer" data-correct-answer="<%= question.answer %>" class="p-4 bg-[#3AFF3A] mt-4">Valider!</button>
        </li>
        <% end %>
    </ul>
  </div>

</section>
